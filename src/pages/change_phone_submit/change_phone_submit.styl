.tip-wrapper {
    padding: 18px 18px;
    box-sizing: border-box;
    line-height: 20px;
}

.input-wrapper {
    width: 100%;
    background: #fff;
}
.input-content{
    margin-left: 16px
}
.input-wrapper .item {
    height: 48px;
    position: relative;
}
.input-wrapper .item input {
    height: 32px;
    line-height: 32px;
    padding: 8px 0;
    display: block;
    width: 90%;
    font-size: 15px;
}
.input-wrapper .item .tip {
    display: none;
    position: absolute;
    top: 0;
    right: 16px;
    height: 48px;
    line-height: 48px;
    font-size: 12px;
}
.input-wrapper .tip .text {
    display: inline-block;
    vertical-align: middle;
    font-size: 12px;
    color: #999;
}
.getVcode .button {
    font-size: 12px;
    line-height: 14px;
    padding: 8px 6px;
}
.getVcode{
    position: absolute;
    right: 16px;
    top: 9px;
}

@keyframes loading {
    0%{transform: rotate(0);}
    100%{transform: rotate(360deg);}
}

@-webkit-keyframes loading {
    0%{-webkit-transform: rotate(0);}
    100%{-webkit-transform: rotate(360deg);}
}

.loading {
    min-width: 24px;
    min-height: 24px;
    display: inline-block;
    vertical-align: middle;
    -webkit-animation: loading 1s steps(12, end) infinite;
    animation: loading 1s steps(12, end) infinite;
    background: transparent url("data:image/svg+xml;base64,") no-repeat;
    background-size: 100%;
}
