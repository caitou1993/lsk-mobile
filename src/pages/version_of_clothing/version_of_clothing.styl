.version-of-clothing-tip {
    color: #fff;
    height: 36px;
    width: 100%;
    font-size: 12px;
    background-color: rgba(212, 0, 115, .5);
    box-sizing: border-box;
    padding: 0 15px;
    position: fixed;
    top: 44px;
    z-index: 16;
    overflow: hidden;
    display: none;
}

.version-of-clothing-tip .left {
    line-height: 36px;
    display: inline-block;
    float: left;
}

.version-of-clothing-tip .right {
    display: inline-block;
    float: right;
}

.version-of-clothing-tip .right .btn {
    color: #d40073;
    width: 70px;
    line-height: 20px;
    text-align: center;
    background-color: #fff;
    border-radius: 28px;
    display: inline-block;
    float: left;
    margin: 8px 10px;
}

.version-of-clothing-tip .arrow {
    font-size: 24px;
    line-height: 36px;
}

.swiper-container {
    position: fixed;
    top: 44px;
    left: 0;
    right: 0;
    bottom: 0;
}

.swiper-container .swiper-wrapper {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
}
.swiper-slide {
    -webkit-overflow-scrolling: touch;
    overflow-y: auto;
}


.version-of-clothing {
    /*height: 224px;*/
    background-color: #fff;
    box-sizing: border-box;
    margin-bottom: 8px;
    padding: 12px;
    display: flex;
    position: relative;
    overflow: hidden;
}

.version-of-clothing .left {
    font-size: 0;
    margin-right: 10px;
    flex: 0 0 auto;
}

.version-of-clothing .left img{
    height: 205px;
    width: 140px;
}

.version-of-clothing .right {
    flex: 1;
}

.version-of-clothing .right .top {
    border-left: 2px solid #d40073;
    padding-left: 6px;
}

.version-of-clothing .right .top .product-name {
    color: #333;
    padding-bottom: 4px;
}

.version-of-clothing .right .top .product-num {
    color: #666;
    font-size: 10px;
}

.version-of-clothing .right .middle {
    width: 100%;
    color: #666;
    line-height: 18px;
    height: 84px;
    font-size: 12px;
    margin: 8px 0 16px 0;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 4;
}

