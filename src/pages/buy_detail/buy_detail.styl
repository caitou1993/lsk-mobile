.down-app {
    height: 66px;
    width: 100%;
    background-color: rgba(0, 0, 0, .5);
    position: fixed;
    bottom: 0;
}

.down-app .logo {
    height: 49px;
    width: 49px;
    float: left;
    background-image: url("../../images/57Icon@2x.png");
    background-size: contain;
    margin: 8px 15px 8px 15px;
}

.down-app .text {
    color: #fff;
    line-height: 22px;
    margin: 12px 0;
    float: left;
}

.down-app .down {
    color: #d40073;
    height: 28px;
    width: 70px;
    background-color: #fff;
    border-radius: 4px;
    line-height: 28px;
    text-align: center;
    margin: 19px 15px 19px 0;
    float: right;
}

.btn-wrapper {
    width: 100%;
    position: absolute;
    bottom: 18px;
    display: none;
}

.btn-wrapper .close-buying {
    width: 94%;
    height: 49px;
    color: #fff;
    font-size: 18px;
    text-align: center;
    line-height: 49px;
    border-radius: 4px;
    background-color: #d40073;
    margin: 0 3%;
}

