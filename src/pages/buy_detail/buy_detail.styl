.purchase-info-wrapper {
    background-color: #fff;
    padding: 15px 15px 0 15px;
}

.purchase-info-wrapper .purchase-text div{
    padding-bottom: 12px;
}

.purchase-text .key {
    color: #999;
    padding-right: 6px;
}

.purchase-text .value {
    color: #333;
}

.purchase-text .times {
    color: #999;
    font-size: 12px;
    float: right;
}

.purchase-text .num {
    color: #d40073;
}

.purchase-info-wrapper .purchase-username{
    width: 100%;
    height: 50px;
    background-color: #fff;
    display: flex;
}

.purchase-username img {
    height: 36px;
    width:36px;
    border-radius: 4px;
    margin: 7px 8px 7px 0;
    flex: 0 0 auto;
}

.purchase-username .purchase-username-text {
    flex: 1;
    display: flex;
    line-height: 50px;
    overflow: hidden;
}

.purchase-username-text .key {
    color: #333;
    display: block;
    flex: 0 0 auto;
    padding-right: 6px;
}

.purchase-username-text .value {
    flex: 1;
    display: block;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.purchase-username-text .arrow {
    color: #999;
    line-height: 50px;
}

.order-taking {
    background-color: #fff;
    line-height: 40px;
    margin-top: 8px;
    padding: 0 15px;
}

