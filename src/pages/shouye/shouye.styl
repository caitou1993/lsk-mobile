    border-left: none;
}

.quality-merchants-wrapper .bottom {
    overflow: hidden;
}

.quality-merchants-wrapper .bottom div {
    width: 33.33%;
    background-color: #fff;
    box-sizing: border-box;
    padding: 6px;
    float: left;
}

.quality-merchants-wrapper .bottom div img {
    width: 100%;
