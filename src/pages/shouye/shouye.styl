    height: 120px;
    width: 100%;
    background-size: cover;
}

.top-header div {
    width: 80px;
    height: 44px;
    line-height: 44px;
    margin: 0 auto;
}

.top-header div span {
    color: #666;
    font-size: 15px;
}

.top-header div i {
    color: #999;
}

.left-swiper {
    text-align: center;
    padding-bottom: 8px;
    border-left: 8px solid #fff;
    overflow: hidden;
}

.left-swiper .swiper-slide {
    font-size: 0;
    text-align: center;
    box-sizing: border-box;
    padding-right: 8px;
}

.left-swiper .swiper-slide img {
    width: 100%;
    margin-top: 8px;
}

.left-swiper .swiper-slide .text {
    color: #666;
    width: 90%;
    text-align: center;
    font-size: 12px;
    margin-top: 4px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}