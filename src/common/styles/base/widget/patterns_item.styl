@import '../mixin/index.styl';
.base-item
  box-sizing border-box
  background #fff
  padding 12px
  .img-box
    position relative
    padding-top 90%
    centerPic()
    .recomend
      position absolute
      font-size 14px
      width 100px
      text-align center
      height 22px
      line-height 22px
      top 10px
      right -30px
      background #ff7011
      color #fff
      transform rotate(45deg)
  .name
    height 30px
    line-height 30px
    width 100%
    overflow hidden
    text-overflow ellipsis
    white-space nowrap
  .message-wrapper
    display flex
    .company-name
      flex 3
      overflow hidden
      text-overflow ellipsis
      white-space nowrap
      font-size 14px
    .price
      flex 2
      text-align right
      font-size 12px
      color #f56565